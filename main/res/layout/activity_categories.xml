<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobiletesting.betraditional.Categories"
    android:background="#fbff09">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We have the following three categories:"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="MEN"
        android:id="@+id/button10"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="250dp"
        android:textSize="40dp"
        android:layout_alignEnd="@+id/button11"
        android:layout_toEndOf="@+id/imageView9"
        android:background="#fbff09" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_alignTop="@+id/button10"
        android:src="@drawable/men" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/woman"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="WOMEN"
        android:id="@+id/button11"
        android:textSize="40dp"
        android:background="#fbff09"
        android:layout_above="@+id/imageView11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:src="@drawable/kids"
        android:layout_alignBottom="@+id/button12"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="KIDS"
        android:id="@+id/button12"
        android:textSize="40dp"
        android:background="#fbff09"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="150dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView11" />
</RelativeLayout>

